<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginHorizontal="2dp"
    android:layout_marginVertical="7.5dp"
    android:orientation="horizontal">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="4dp"
        android:background="@color/white"
        android:clipChildren="false"
        android:clipToPadding="false"
        android:divider="@android:color/transparent"
        android:dividerHeight="0.0px"
        android:elevation="2dp"
        app:cardCornerRadius="10dp"
        app:cardElevation="2dp"
        app:cardPreventCornerOverlap="false">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            android:orientation="horizontal">

            <View
                android:id="@+id/view"
                android:layout_width="10dp"
                android:layout_height="match_parent"
                android:background="@color/red" />

            <androidx.cardview.widget.CardView
                android:id="@+id/CardView_number"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_gravity="center_vertical"
                android:layout_marginHorizontal="8dp"
                android:backgroundTint="#34C142"
                app:cardCornerRadius="15dp">

                <androidx.cardview.widget.CardView
                    android:layout_width="26dp"
                    android:layout_height="26dp"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="2dp"
                    android:backgroundTint="@color/white"
                    app:cardCornerRadius="13dp">

                    <TextView
                        android:id="@+id/question_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="14"
                        android:textColor="#34C142"
                        android:textSize="14sp" />

                </androidx.cardview.widget.CardView>
            </androidx.cardview.widget.CardView>


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_marginVertical="4dp"
                android:layout_weight="1"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/question_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/montserratmedium"
                    android:text="Lorem ipsum dolor sit amet consecteturLorem ipsum."
                    android:textColor="#04194D"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/questionDate"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="11.02.23"
                    android:textColor="#4C5C85"
                    android:textSize="15sp" />

            </LinearLayout>

            <ImageView
                android:id="@+id/ic_arrow"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_gravity="center_vertical"
                android:src="@drawable/ic_arrow_forward" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>


</LinearLayout>